<% layout('layout/page')%>


    <div class="row mb-5">
        <div class="col-6 mt-5">
            <div>
                <p id="c" style="color :white">
                    <li>today: <%= today.getDate()%>
                    </li>
                </p>
            </div>
            <div class="card ">

                <h3 class="text-center" style="color:white">Calories</h3>
                <h3>Calories</h3>
                <p>Total: <%= sum.sumCalories %>/<%= userInfo.calories %>
                </p>
                <div class="progress mb-3">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" id="caloriesProgressBar"
                        role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"
                        style="width:  100%;">
                        <%=calPro%>%
                    </div>

                </div>
                <h3>Carbohydrates</h3>
                <p>Total: <%= sum.sumCarbs %>/<%= userInfo.carbs %>
                            <div class="progress mb-3">
                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                    id="carbsProgressBar" role="progressbar" aria-valuenow="75" aria-valuemin="0"
                                    aria-valuemax="100" style="width: 100%">
                                    <%=carbsPro%>%
                                </div>
                            </div>
                            <h3>Fat</h3>
                            <p>Total: <%= sum.sumFats%>/<%= userInfo.fats %>
                                        <div class="progress mb-3">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated"
                                                role="progressbar" id="fatsProgressBar" aria-valuenow="75"
                                                aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                                <%=fatsPro%>%
                                            </div>
                                        </div>
                                        <h3>Protein</h3>
                                        <p>Total: <%= sum.sumProteins%>/<%= userInfo.protein %>
                                                    <div class="progress mb-3">
                                                        <div class="progress-bar progress-bar-striped progress-bar-animated"
                                                            role="progressbar" id="proteinProgressBar"
                                                            aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"
                                                            style="width: 100%">
                                                            <%=proteinPro%>%
                                                        </div>
                                                    </div>

            </div>
        </div>
        <div class="col-6">
            <div class="d-flex justify-content-end ">
                <a href="/recipes" class="btn shadow m-2" style="color: white;border: solid 1px black;">Add meal from
                    recipes</a>
                <a href="/meal/new" class="btn shadow m-2" style="color: white;border: solid 1px black;">Add new
                    meal</a>
            </div>
            <h5 style="color: blanchedalmond;">Meals of the day</h5>
            <% if(user.meal.length) {%>
                <% for (let m of user.meal) { %>
                    <% if (today.getDate()==m.day.getDate() && today.getMonth()==m.day.getMonth() &&
                        today.getFullYear()==m.day.getFullYear() ) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= m.name%>
                                </h5>
                                <ul>
                                    <li>Calories: <%= m.calories%>
                                    </li>
                                    <li>Proteins: <%= m.protein%>
                                    </li>
                                    <li>Fats: <%= m.fats%>
                                    </li>
                                    <li>Carbs: <%= m.carbs%>
                                    </li>
                                    <li>today: <%= today.getDate()%>
                                    </li>
                                </ul>
                                <div class="d-flex justify-content-start">
                                    <form action="/meal/<%=m._id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger m-2">Delete</button>
                                    </form>
                                    <form action="/meal/<%=m._id%>" method="GET">
                                        <button class="btn btn-primary m-2">Edit</button>
                                    </form>
                                </div>

                            </div>

                        </div>

                        <% }} %>
                            <% } %>
        </div>
    </div>
    <script src='/js/progress.js'></script>