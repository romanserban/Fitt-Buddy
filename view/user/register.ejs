<% layout('layout/page')%>

    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class=" col-md-6 offset-md-3 col-xl-6 offset-xl-3 mb-5">
                <div class=" card shadow">
                    <img src="images\logo.png" alt="" class="card-img-top">
                    <div class="card-body">
                        <h2 class="card-title">Register</h2>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name=user[username] required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name=user[password] required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name=user[email] required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-info ">
                                    Submit
                                </button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
            <div class="progressbar-wrapper col-6 offset-sm-2 mb-5">
                <ul class="progressbar">
                    <li class="active">Register</li>
                    <li>User Information</li>
                    <li>Physical Activities</li>
                </ul>
            </div>


        </div>

    </div>