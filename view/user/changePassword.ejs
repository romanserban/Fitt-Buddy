<% layout('layout/page')%>
    <div class="row">
        <div class="d-flex justify-content-center">
            <div class="col-5 ">
                <h1 class="mb-3">Change Password</h1>
                <div class="card ">
                    <div class="card-body">
                        <form action="/changePassword/<%= user._id %>?_method=PUT"
                            oninput='p2.setCustomValidity(p2.value != p1.value ? "Passwords do not match." : "")'
                            method="POST">
                            <div class="mb-3">
                                <label class="form-label" for="newPassword">New password:</label>
                                <input class="form-control" type="password" id="newPassword" name=p1>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="confirmPassword">Repeat new password:</label>
                                <input class="form-control" type="password" id="confirmPassword" name=p2>
                            </div>
                            <button class="btn btn-info">
                                Save new password
                            </button>
                        </form>
                    </div>

                </div>

            </div>
        </div>

    </div>